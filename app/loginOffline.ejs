<div id="loginOfflineContainer" style="display: none;">
    <div id="loginOfflineCancelContainer">
        <button id="loginOfflineCancelButton">
            <div id="loginOfflineCancelIcon">X</div>
            <span id="loginOfflineCancelText">Назад</span>
        </button>
    </div>
    <div id="loginOfflineContent">
        <form id="loginOfflineForm">
            <img id="loginOfflineImageSeal" src="assets/images/SealCircle.png" />
            <span id="loginOfflineSubheader">Локальная учётная запись</span>
            <div class="loginFieldContainer">
                <svg id="profileSVG" class="loginSVG" viewBox="40 37 65.36 61.43">
                    <g>
                        <path
                            d="M86.77,58.12A13.79,13.79,0,1,0,73,71.91,13.79,13.79,0,0,0,86.77,58.12M97,103.67a3.41,3.41,0,0,0,3.39-3.84,27.57,27.57,0,0,0-54.61,0,3.41,3.41,0,0,0,3.39,3.84Z" />
                    </g>
                </svg>
                <input id="loginOfflineUsername" class="loginField" type="text" placeholder="Имя игрока" />
            </div>
            <button id="loginOfflineButton">
                <div id="loginOfflineButtonContent">
                    ВХОД
                    <svg id="loginOfflineSVG" viewBox="0 0 24.87 13.97">
                        <defs>
                            <style>
                                .arrowLine {
                                    fill: none;
                                    stroke: #FFF;
                                    stroke-width: 2px;
                                    transition: 0.25s ease;
                                }
                            </style>
                        </defs>
                        <polyline class="arrowLine" points="0.71 13.26 12.56 1.41 24.16 13.02" />
                    </svg>
                    <div class="circle-loader">
                        <div class="checkmark draw"></div>
                    </div>
                    <!--<div class="spinningCircle" id="loginSpinner"></div>-->
                </div>
            </button>
            <div id="loginOfflineDisclaimer">
                <p class="loginDisclaimerText">Укажите любое имя игрока без пробелов, на английском с длинной от 1 до 16
                    символов</p>
            </div>
        </form>
    </div>
    <script src="./assets/js/scripts/loginOffline.js"></script>
</div>